<div class="headline">
<h1>Gang bang your tasks!</h1>       
</div>

<div class="signup_form">
<h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class=>'signin' %></div>
  <% end %>
  <a href="http://gangtask.com/users/auth/facebook"><div class="facebook_button"></div></a>
</div>



<script>
if (document.referrer.match('apps.facebook.com') != null){
  window.location = "http://gangtask.com/users/auth/facebook";
};
</script>
