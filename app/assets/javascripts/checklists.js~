$(function(){
  $('.check-icons').click(function(){
    element = $(this);
    jQuery.ajax({
      type: 'POST',
      url: '/columns/'+$(this).data('column')+'/answers/'+$(this).data('answer'),
      data: { _method:'PUT' },
      dataType: 'json',
      success: function(data){
        $(this).html(element);
      },
      async: false
    });

  });
});


